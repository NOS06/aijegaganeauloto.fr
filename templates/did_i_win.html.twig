{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block main %}
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="my-3">
                {{ form_row(form.ball1) }}
            </div>
            <div class="my-3">{{ form_row(form.ball2) }}</div>
            <div class="my-3"> {{ form_row(form.ball3) }}</div>
            <div class="my-3">{{ form_row(form.ball4) }}</div>
            <div class="my-3">{{ form_row(form.ball5) }}</div>
            <div class="my-3">{{ form_row(form.luckyNumber) }}</div>
            <div class="d-grid gap-2 mt-2">
                <button type="submit" class="btn btn-primary btn-block">
                    Rechercher
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
